  {
    "name": "Course Requests",
    "item": [
      {
        "name": "Get All Course Requests",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{base_url}}/admin/course-requests?status=pending",
            "host": ["{{base_url}}"],
            "path": ["admin", "course-requests"],
            "query": [
              {
                "key": "status",
                "value": "pending",
                "description": "pending|approved|rejected"
              },
              {
                "key": "studentId",
                "value": "",
                "description": "Filter by student ID",
                "disabled": true
              },
              {
                "key": "courseId",
                "value": "",
                "description": "Filter by course ID",
                "disabled": true
              }
            ]
          },
          "description": "Get all course requests with optional filters"
        }
      },
      {
        "name": "Get Course Request By ID",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{base_url}}/admin/course-requests/:id",
            "host": ["{{base_url}}"],
            "path": ["admin", "course-requests", ":id"],
            "variable": [
              {
                "key": "id",
                "value": "",
                "description": "Course request ID"
              }
            ]
          },
          "description": "Get single course request by ID"
        }
      },
      {
        "name": "Approve Course Request",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{base_url}}/admin/course-requests/:id/approve",
            "host": ["{{base_url}}"],
            "path": ["admin", "course-requests", ":id", "approve"],
            "variable": [
              {
                "key": "id",
                "value": "",
                "description": "Course request ID"
              }
            ]
          },
          "description": "Approve course request and automatically enroll student"
        }
      },
      {
        "name": "Reject Course Request",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"rejectionReason\": \"Optional reason for rejection\"\n}",
            "options": {
              "raw": {
                "language": "json"
              }
            }
          },
          "url": {
            "raw": "{{base_url}}/admin/course-requests/:id/reject",
            "host": ["{{base_url}}"],
            "path": ["admin", "course-requests", ":id", "reject"],
            "variable": [
              {
                "key": "id",
                "value": "",
                "description": "Course request ID"
              }
            ]
          },
          "description": "Reject course request with optional reason"
        }
      },
      {
        "name": "Bulk Approve Course Requests",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"requestIds\": [\"request-id-1\", \"request-id-2\", \"request-id-3\"]\n}",
            "options": {
              "raw": {
                "language": "json"
              }
            }
          },
          "url": {
            "raw": "{{base_url}}/admin/course-requests/bulk-approve",
            "host": ["{{base_url}}"],
            "path": ["admin", "course-requests", "bulk-approve"]
          },
          "description": "Approve multiple course requests at once"
        }
      }
    ]
  },
